<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SkinCrabApp.Views.AutoExamenPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:SkinCrabApp.ViewModels"
    x:DataType="viewmodels:AutoExamenViewModel">

    <ContentPage.BindingContext>
        <viewmodels:AutoExamenViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" /> 
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" /> 
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="0,30,0,30"
                FontAttributes="Bold"
                FontSize="Title"
                HorizontalTextAlignment="Center"
                Text="Auto Examen"
                TextColor="Black"
                VerticalTextAlignment="Center" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Margin="20,15,0,0"
                HorizontalTextAlignment="Start"
                Text="¿Hace cuánto notó la lesión?"
                TextColor="Black"
                VerticalTextAlignment="Center" />

            <Entry
                Grid.Row="1"
                Grid.Column="1"
                Margin="20,15,20,0"
                HorizontalTextAlignment="Center"
                Keyboard="Numeric"
                Placeholder="Días"
                Text="{Binding AutoExamenCommand.HaceCuantoNotoLaLesion}" />

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Margin="20,15,0,0"
                HorizontalTextAlignment="Start"
                Text="Nivel de cambio en el tamaño de la lesión"
                TextColor="Black"
                VerticalTextAlignment="Center" />

            <Entry
                Grid.Row="2"
                Grid.Column="1"
                Margin="20,15,20,0"
                HorizontalTextAlignment="Center"
                Keyboard="Numeric"
                Placeholder="0 al 10"
                Text="{Binding AutoExamenCommand.NivelDeCambioTamanoDeLaLesion}" />

            <Label
                Grid.Row="3"
                Grid.Column="0"
                Margin="20,15,0,0"
                HorizontalTextAlignment="Start"
                Text="¿Ha notado hinchazón en la zona de la lesión?"
                TextColor="Black" />

            <Switch
                Grid.Row="3"
                Grid.Column="1"
                HorizontalOptions="Center"
                IsToggled="{Binding AutoExamenCommand.HinchazonLesion}"
                OnColor="LightBlue"
                ThumbColor="#2196F3" />

            <Label
                Grid.Row="4"
                Grid.Column="0"
                Margin="20,15,0,0"
                HorizontalTextAlignment="Start"
                Text="¿Ha notado algún aumento de temperatura en la zona de la lesión?"
                TextColor="Black" />

            <Switch
                Grid.Row="4"
                Grid.Column="1"
                HorizontalOptions="Center"
                IsToggled="{Binding AutoExamenCommand.AumentoTemperaturaDeLaLesion}"
                OnColor="LightBlue"
                ThumbColor="#2196F3" />

            <Label
                Grid.Row="5"
                Grid.Column="0"
                Margin="20,15,0,0"
                HorizontalTextAlignment="Start"
                Text="¿Ha notado algún enrojecimiento en la zona de la lesión?"
                TextColor="Black" />

            <Switch
                Grid.Row="5"
                Grid.Column="1"
                HorizontalOptions="Center"
                IsToggled="{Binding AutoExamenCommand.EnrojecimientoZonaDeLaLesion}"
                OnColor="LightBlue"
                ThumbColor="#2196F3" />

            <Label
                Grid.Row="6"
                Grid.Column="0"
                Margin="20,15,0,0"
                HorizontalTextAlignment="Start"
                Text="¿Ha notado algún cambio en la textura de la lesión?"
                TextColor="Black" />

            <Switch
                Grid.Row="6"
                Grid.Column="1"
                HorizontalOptions="Center"
                IsToggled="{Binding AutoExamenCommand.CambioEnLaTexturaDeLaLesion}"
                OnColor="LightBlue"
                ThumbColor="#2196F3" />

            <Label
                Grid.Row="7"
                Grid.Column="0"
                Margin="20,15,0,20"
                HorizontalTextAlignment="Start"
                Text="¿Ha notado algún cambio en el color de la lesión?"
                TextColor="Black"
                VerticalTextAlignment="Center" />

            <Entry
                Grid.Row="7"
                Grid.Column="1"
                Margin="20,15,20,20"
                HorizontalTextAlignment="Center"
                Keyboard="Text"
                Placeholder="Color"
                Text="{Binding AutoExamenCommand.CambioColorDeLaLesion}" />

            <Button
                Grid.Row="8"
                Grid.ColumnSpan="2"
                Margin="70,0,70,20"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="1"
                Command="{Binding TapSubmit}"
                CommandParameter="{Binding AutoExamenCommand}"
                CornerRadius="5"
                Text="Aceptar" />
        </Grid>

    </ScrollView>


</ContentPage>